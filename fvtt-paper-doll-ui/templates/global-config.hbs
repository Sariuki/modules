<form action="submit">

    {{#each SLOT_DATA as |slots|}}
    <fieldset>
        <legend>{{@key}}</legend>
    
    {{#each slots as |slot|}}
    <div class="form-group">
        <label for="">{{@key}}</label>
        <input type="number" name="{{@../key}}.{{@key}}" value="{{slot}}">
    </div>
    {{/each}}
    </fieldset>
    {{/each}}

    {{#each IMAGE as |slotImage|}}
    <div class="form-group">
        <label for="">{{@key}}</label>
        <input type="text" name="IMAGE.{{@key}}" value="{{slotImage}}">
        <button type="button" class="file-picker" data-type="image" data-target="IMAGE.{{@key}}" title="Browse Files" tabindex="-1">
        <i class="fas fa-file-import fa-fw"></i>
        </button>
    </div>

    {{/each}}

    <div class="form-group">
        <label for="">MAIN_COLOR</label>
        {{colorPicker name="MAIN_COLOR" value=MAIN_COLOR default="#000000"}}
    </div>

    <div class="form-group">
        <label for="">HUE_ROTATE</label>
        {{rangePicker name="HUE_ROTATE" value=HUE_ROTATE min=0 max=360 step=1}}
    </div>

    <div class="form-group">
        <label for="">EQUIPPED_PATH</label>
        <input type="text" name="EQUIPPED_PATH" value="{{EQUIPPED_PATH}}">
    </div>


    <footer>
        <button type="submit">{{localize "SETTINGS.Save"}}</button>
    </footer>
</form>